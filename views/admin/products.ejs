    <body>
        <%- include('../includes/navigation.ejs') %>
    <main>

      <% if(prods.length>0) {%>
      <div class="grid">
        <% for(let product of prods) {%>
        <article class="card-product-item">
            <header class="card-header">
                <h1 class="product-title"> <%= product.title %> </h1>
            </header>
            <div class="card-image">
                <img src="<%= product.imageUrl %>" alt="Laptop"/>

            </div>
            <div class="card-content">
                <h2 class="product-price">$ <%= product.price %></h2>
                <p class="product-description"><%= product.description %>
                </p>
            </div>
            <div class="card-actions">
                <a class="button" href="/admin/edit-product/<%= product.productId %>?isEditing=true">Edit</a>
                <form action="/admin/remove-product" method="POST">
                    <input type="hidden" value="<%=product.productId %>" name="productId">
                    <button class="button" type="submit" >Remove</button>
                </form>
            </div>
        </article>
        <%}%>
      </div>
      <% }else{%>
      <h2>Product Not Found</h2>
      <%}%>
    </main>
    <%- include('../includes/end.ejs') %>

    