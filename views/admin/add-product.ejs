<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/CSS/product.css">

</head>

<body>
    <%- include('../includes/navigation.ejs') %>

    <main>
        <form class="product-form" action="/admin/<%  if(isEdit) { %>edit-product 
            <% } else { %>add-product 
            <% } %>"
        method="POST">
            <div class="form-control">
                <label for="title">Product Title</label>
                <input type="text" name="title" id="title"
                value="<%= isEdit ? product.title : '' %>" />
            </div>
            <div class="form-control">
                <label for="description">Product Description</label>
                <textarea name="description" id="description" rows="6"><%= isEdit ? product.description : '' %>
                </textarea>
            </div>
            <div class="form-control">
                <label for="price">Product Price</label>
                <input type="number" name="price" id="price"
                value="<%= isEdit ? product.price : '' %>" />
            </div>
            <div class="form-control">
                <label for="imageUrl">Product Image URL</label>
                <input type="text" name="imageUrl" id="imageUrl"
                value="<%= isEdit ? product.imageUrl : '' %>" />
            </div>
            <% if(isEdit) { %>
                <input type="hidden" value="<%=product.productId %>" name="productId">
                <% } %>
            <button type="submit">
                <%  if(isEdit) { %>
                    Save Changes
                    <% } else { %>
                    Add Product
                <% } %>
            </button>
        </form>
    </main>
    <%- include('../includes/end.ejs') %>